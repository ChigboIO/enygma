#!/usr/bin/env ruby

require 'enygma/decryptor'
require 'enygma/helpers/help'

if ARGV[0] && ARGV[0] == 'help'
	Enygma::Help.decrypt
elsif ARGV.length < 3 || ARGV.length > 4
	puts "Incorrect number of argument."
	Enygma::Help.decrypt
elsif !File.file?(ARGV[0])
	puts "The input file path does not exist"
	Enygma::Help.decrypt
elsif ARGV.length == 4 && File.file?(ARGV[1])
	puts "The output file path cannot be created, or file already exist"
	Enygma::Help.decrypt
else
	if ARGV.length == 4
		Enygma::Decryptor.new(ARGV[0], ARGV[2], ARGV[3], ARGV[1]).decrypt
	else
		Enygma::Decryptor.new(ARGV[0], ARGV[1], ARGV[2]).decrypt
	end
end
